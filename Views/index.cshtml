
<h1>Add A Stylist</h1>

<form action = "/Stylist/new" method = "post">
<input name = "stylistName" placeholder = "Stylist Name"></input>
<button>Submit</button>
</form>
  @if(@Model.Count > 0)
  {
    @foreach(var stylist in Model)
    {
      <li><a href ="/Stylist/@stylist.GetID()/clients"><h2>@stylist.GetName() </h2></a><a href ="/Stylist/@stylist.GetID()/edit">Edit</a> ||
        <form action="/Stylist/@stylist.GetID()/delete" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit">Delete</button>
        </form>
      </li>
    }
  }
