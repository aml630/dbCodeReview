<h1>Client List</h1>

<h1>Add A Stylist</h1>

<form action = '/Client/new/@Model["stylist"].GetID()' method = "post">
<input name = "clientName" placeholder = "Client Name"></input>
<button>Submit Your Client</button>
</form>

@foreach(var client in @Model["clientList"])
{
  <li>@client.GetName()  <a href = "/Stylist/@client.GetID()/clients/edit">Edit</a> </li>

  <form action='/Stylist/@client.GetID()/clients/deleted' method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit">Delete</button>
  </form>

}
